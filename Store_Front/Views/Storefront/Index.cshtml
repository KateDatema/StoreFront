

@model IEnumerable<Product>


@foreach (Product p in Model)
{
    <span>
        <br />
        <b>@p.Name<br /></b>
        Id: @p.Id<br />
        Price: @p.Price <br />
        Quantity: @p.Quantity<br />
        Description: @p.Description<br />
        <a asp-action="Buy" asp-controller="Storefront" asp-route-Id="@p.Id">Buy <b>@p.Name</b></a>
        <br />
        
    </span><hr />
}

